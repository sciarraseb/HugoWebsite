.technical_summ:before{display:block;content:"";width:3rem;height:3rem;position:absolute;top:97%;left:95%;border-bottom:3px solid var(--navbar-color);border-right:3px solid var(--navbar-color)}.page_holder{box-sizing:border-box;padding:0;margin-left:var(--navbar-width);font-family:baskerville}.technical_summ,.simulation_summ,.coding_summ{position:relative;max-width:45rem;height:100%;margin:0 auto;margin-top:5rem;background:#fff}.technical_summ:after{display:block;content:"";width:1.75rem;height:1.75rem;position:absolute;top:0%;right:0;left:-2rem;border-right:5px solid var(--technical-color)}.coding_summ:after{display:block;content:"";width:1.75rem;height:1.75rem;position:absolute;top:0%;right:0;left:-2rem;border-right:5px solid var(--coding-color)}.simulation_summ:after{display:block;content:"";width:1.75rem;height:1.75rem;position:absolute;top:0%;right:0;left:-2rem;border-right:5px solid var(--simulation-color)}.posts{padding:0}.posts a{text-decoration:none}.items{font-size:15px;list-style:none;margin-bottom:.25rem;font-weight:700;color:var(--navbar-color)}.items a:visited{color:#4b4747}.items a:hover{text-decoration:underline}body{font-family:monospace}.navbar{position:fixed;left:0;top:0;width:var(--navbar-width);height:100vh;background:var(--navbar-color)}h1{display:block;color:#fff;text-align:right;font-size:30px;margin:0;padding-top:30px;padding-bottom:40px;background-color:#002241;padding-right:5px}.navbar-links{margin:0;padding:0;text-align:right;font-size:15px;list-style:none;padding-right:5px}.navbar-links li a{text-decoration:none;display:block;padding-bottom:15px;padding-top:15px}.navbar-links a:hover{font-weight:700;text-decoration:underline;background-color:#00182d}.home{color:var(--home-color)}.technical{color:var(--technical-color)}.coding{color:var(--coding-color)}.simulation{color:var(--simulation-color)}.resources{color:var(--resources-color)}.about{color:var(--about-color)}.portal{color:#fff;font-size:12px;position:absolute;bottom:50px;right:50%}.