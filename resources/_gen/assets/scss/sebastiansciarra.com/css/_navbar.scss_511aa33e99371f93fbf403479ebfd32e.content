body{font-family:monospace}.navbar{position:fixed;left:0;top:0;width:var(--navbar-width);height:100vh;background:var(--navbar-color)}h1{display:block;color:#fff;text-align:right;font-size:30px;margin:0;padding-top:30px;padding-bottom:40px;background-color:#002241;padding-right:5px}.navbar-links{margin:0;padding:0;text-align:right;font-size:15px;list-style:none;padding-right:5px}.navbar-links li a{text-decoration:none;display:block;padding-bottom:15px;padding-top:15px}.navbar-links a:hover{font-weight:700;text-decoration:underline;background-color:#00182d}.home{color:var(--home-color)}.technical{color:var(--technical-color)}.coding{color:var(--coding-color)}.simulation{color:var(--simulation-color)}.resources{color:var(--resources-color)}.about{color:var(--about-color)}.portal{color:#fff;font-size:12px;position:absolute;bottom:50px;right:50%}.toggle-button{position:absolute;top:25px;right:20px;display:none;flex-direction:column;justify-content:space-between;width:30px;height:21px;background:#002241;border:#fff}.toggle-button .bar{height:3px;width:100%;background-color:#fff;border-radius:10px}